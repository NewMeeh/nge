{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "strict": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@mcisse/nge": ["dist/nge"],
      "@mcisse/nge/doc": ["dist/nge/doc"],
      "@mcisse/nge/monaco": ["dist/nge/monaco"],
      "@mcisse/nge/services": ["dist/nge/services"],
      "@mcisse/nge/markdown": ["dist/nge/markdown"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
