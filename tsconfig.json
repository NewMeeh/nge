{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "strict": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@mcisse/nge": ["projects/nge"],
      "@mcisse/nge/doc": ["projects/nge/doc"],
      "@mcisse/nge/monaco": ["projects/nge/monaco"],
      "@mcisse/nge/services": ["projects/nge/services"],
      "@mcisse/nge/markdown": ["projects/nge/markdown"],
      "@mcisse/nge/ui/tree": ["projects/nge/ui/tree"],
      "@mcisse/nge/ui/list": ["projects/nge/ui/list"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
